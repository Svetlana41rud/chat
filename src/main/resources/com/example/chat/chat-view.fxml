<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.chat.ChatController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <TextArea fx:id="messegeArea" VBox.vgrow="ALWAYS" editable="false"/>
    <HBox spacing="20">
        <TextField fx:id="messegeField" HBox.hgrow="ALWAYS"/>
        <Button text="Send" onAction="#sendButtonClick" defaultButton="true"/>
    </HBox>
</VBox>
